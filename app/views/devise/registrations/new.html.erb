<%= render partial: "application/validation_errors", locals: {model: resource} %>
<%= stylesheet_link_tag 'sign_in' %>

<h1><%= t('.sign_up') %></h1>
<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal user', role: 'form' }) do |f| %>
    <div class="row">
      <div class="input-field col s6 offset-s3">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true %>
        <%= f.error_span(:first_name) %>
      </div>
      <div class="input-field col s6 offset-s3">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
        <%= f.error_span(:last_name) %>
      </div>
      <div class="input-field col s6 offset-s3">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: resource.email %>
        <%= f.error_span(:email) %>
      </div>

      <% unless resource.has_omniauth? %>
        <div class="input-field col s6 offset-s3">
          <%= f.label :password %>
          <%= f.password_field :password %>
          <%= f.error_span(:password) %>
        </div>
        <div class="input-field col s6 offset-s3">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
          <%= f.error_span(:password_confirmation) %>
        </div>
      <% end %>
    </div>

    <div class="row">
      <div class="center">
        <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
<div class="row" style="margin-top: 10px">
  <div class="center white-text hide-on-small-only">
    <%= t('devise.passwords.forgotten_question') %>
    <%= link_to t('devise.passwords.reset')+ '.',
                new_password_path(resource_name)%>
  </div>
  <div class="center white-text hide-on-small-only">
    <%= t('devise.registrations.have_account_question')%>
    <%= link_to t('devise.registrations.sign_in')+ '!',
                new_session_path(resource_name)%>
  </div>

  <!-- mobile version -->
  <div class="center hide-on-med-and-up">
    <%= t('devise.passwords.forgotten_question') %>
    <%= link_to t('devise.passwords.reset')+ '.',
                new_password_path(resource_name)%>
  </div>
  <div class="center hide-on-med-and-up">
    <%= t('devise.registrations.have_account_question')%>
    <%= link_to t('devise.registrations.sign_in')+ '!',
                new_session_path(resource_name)%>
  </div>
</div>
