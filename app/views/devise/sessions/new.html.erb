<%= stylesheet_link_tag 'sign_in' %>
<div>
  <div class="anmelden">
    <h1><%= t('.sign_in') %></h1>
  </div>
  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="center">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'input_field' %>
      </div>
      <div class="center">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'off', class: 'input_field' %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="center">
          <%= f.label :remember_me, class: 'checkBoxLabel' do %>
            <%= f.check_box :remember_me %> <%= t('activerecord.attributes.user.remember_me') %>
          <% end %>
        </div>
      <% end %>
      <%= f.submit  t('.sign_in'), class: 'btn btn-primary' %>
      <%= link_to t('devise.registrations.sign_in_with_provider', provider: 'OpenID'),
                  omniauth_authorize_path(:user, :hpiopenid),
                  class: 'btn btn-link',
                  role: 'button'
      %>
    <% end %>
  </div>
  <div class="panel-footer">
    <%= t('devise.passwords.forgotten_question') %>
    <%= link_to t('devise.passwords.reset')+ '.',
                new_password_path(resource_name)
    %>
    <br/>
    <%= t('devise.registrations.no_account_question') %>
    <%= link_to t('devise.registrations.sign_up')+ '!',
                new_registration_path(resource_name)
    %>
</div>
</div>
