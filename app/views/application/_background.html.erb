<%-
  $no_background = "navbar-overlap"
  $with_background = "navbar-overlap background"
  $background = $no_background


  case (request.user_agent =~ /Mobile|webOS/).present? # check if user is using a mobile device
    when false  # in case it is not a mobile device
      case controller_name
        when "sessions"
          case action_name
            when "new" then $background = $with_background
          end
        when "users" then
          case action_name
            when "new", "create" then $background = $with_background
          end
        when "welcome"
          case action_name
            when "index" then $background = $with_background
          end
      end
  end
%>

<%=$background%>
