<%= render 'events/forms/parts/dates', f: form%>
<%= render 'events/forms/parts/player_type', f: form %>

<div class="form-group" id="event_player_types">
  <%= form.label :player_type, class: 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= form.select(:player_type, Event.player_types.map { |k, _| [Event.human_player_type(k), k] },
                            { selected: @event.player_type, include_blank: t('events.new.select_player_type') },
                            { class: 'form-control' }) %>
  </div>
</div>

<div class="form-group" id="event_game_modes">
  <%= form.label :game_mode, class: 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= form.select(:game_mode, Tournament.game_modes.map {|k, _| [Tournament.human_game_mode(k), k]},
                 { selected: @event.game_mode, include_blank: t('events.new.select_game_mode')},
                 { class: 'form-control' }) %>
  </div>
</div>
