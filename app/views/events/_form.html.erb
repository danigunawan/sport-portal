<%= form_for @event, html: { class: "form-horizontal event" } do |f| %>

  <%= render partial: "application/validation_errors", locals: {model: @event} %>

  <div class="form-group">
    <%= f.label :name, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, id: :event_name, class: 'form-control' %>
      <%= f.error_span(:name) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :description, id: :event_description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label Event.human_attribute_name(:event_type), :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.collection_select :type, event_types_enum_localize, :first, :second,
                                {selected: @event.type, include_blank: t('events.new.select_type')},
                                :class => 'form-control', :id => 'event_type' %>
      </div>
    </div>
    <div class="form-group" id="league-game-mode">
      <%= f.label Event.human_attribute_name(:game_mode), :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.collection_select :game_mode, league_gamemodes_localize, :first, :second,
                     {selected: @event.game_mode, include_blank: t('events.new.select_game_mode')},
                     { :class => 'form-control', :id => 'event_game_mode_league'} %>
      </div>
    </div>

    <div class="form-group" id="tournament-game-mode">
      <%= f.label Event.human_attribute_name(:game_mode), :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.collection_select :game_mode, tournament_gamemodes_localize, :first, :second,
                                {selected: @event.game_mode, include_blank: t('events.new.select_game_mode')},
                     { :class => 'form-control', :id => 'event_game_mode_tournament'}%>
      </div>
    </div>

    <div class="form-group" id="event_player_types">
      <%= f.label Event.human_attribute_name(:player_type), :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.collection_select :player_type, event_player_types_localize, :first, :second,
                                {selected: @event.player_type, include_blank: t('events.new.select_player_type')},
                                { :class => 'form-control', :id => 'event_player_type'}%>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :max_teams, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :max_teams, id: :event_max_teams, class: 'form-control' %>
      <%= f.error_span(:max_teams) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :discipline, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :discipline, id: :event_discipline, class: 'form-control' %>
      <%= f.error_span(:discipline) %>
    </div>

    <div class="form-group" id="event_deadline_div">
      <%= f.label :deadline, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :deadline, id: :event_deadline, :class => 'form-control', :data => { :provide => 'datepicker', "date-format" => "yyyy-mm-dd" } %>
        <%= f.error_span(:deadline) %>
      </div>
    </div>

    <div class="form-group" id="event_startdate_div">
      <%= f.label :startdate, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :startdate, id: :event_startdate, :class => 'form-control', :data => { :provide => 'datepicker', "date-format" => "yyyy-mm-dd" } %>
        <%= f.error_span(:startdate) %>
      </div>
    </div>
    <div class="form-group" id="event_enddate_div">
      <%= f.label :enddate, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :enddate, id: :event_enddate, :class => 'form-control', :data => { :provide => 'datepicker', "date-format" => "yyyy-mm-dd" } %>
        <%= f.error_span(:enddate) %>
      </div>
    </div>
    <div class="form-group" id="event_duration_div">
      <%= f.label :duration, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :duration, id: :event_duration, :class => 'form-control' %></div>
    </div>

    <div class="form-group" id="event_metric_div">
      <%= f.label :metrics, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.collection_select :metrics, event_metric_localize, :first, :second,
                                {selected: @event.metric, include_blank: t('events.new.select_metric')},
                                { :class => 'form-control', :id => 'event_metric'}%>
      </div>
    </div>

    <div class="form-group" id="initial_value_div">
      <%= f.label :initial_value, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :initial_value, id: :event_initial_value, :class => 'form-control' %>
      </div>
    </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit submit_label,
                   class: 'btn btn-primary' %>
      <%= link_to t('helpers.links.cancel'),
                  back_path,
                  class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
