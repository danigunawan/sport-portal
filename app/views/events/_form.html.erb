<%= form_for @event, :html => { :class => "form-horizontal event" } do |f| %>

    <%= render partial: "application/validation_errors", locals: {model: @event} %>

    <div class="form-group">
      <%= f.label :name, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :name, :class => 'form-control' %>
        <%= f.error_span(:name) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_area :description, :class => 'form-control' %>
        <%= f.error_span(:description) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :gamemode, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :gamemode, :class => 'form-control' %>
        <%= f.error_span(:gamemode) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :sport, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :sport, :class => 'form-control' %>
        <%= f.error_span(:sport) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :teamsport, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.check_box :teamsport, :class => 'form-control' %>
        <%= f.error_span(:teamsport) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :playercount, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.number_field :playercount, :class => 'form-control' %>
        <%= f.error_span(:playercount) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :gamesystem, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :gamesystem, :class => 'form-control' %>
        <%= f.error_span(:gamesystem) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :deadline, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :deadline, id: :event_deadline, :data => { :provide => 'datepicker', "date-format" => "dd/mm/yyyy" } %>
        <%= f.error_span(:deadline) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :startdate, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :startdate, id: :event_startdate, :data => { :provide => 'datepicker', "date-format" => "dd/mm/yyyy" } %>
        <%= f.error_span(:startdate) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :enddate, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :enddate, id: :event_enddate, :data => { :provide => 'datepicker', "date-format" => "dd/mm/yyyy" } %>
        <%= f.error_span(:enddate) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :duration, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :duration, id: :event_duration %>
        <%= f.error_span(:duration) %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    events_path, :class => 'btn btn-default' %>
      </div>
    </div>

<% end %>
