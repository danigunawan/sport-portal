
<div id="gameday-slider">
  <button class="btn arrow-left" disabled>
    &lt;
  </button>
  <span class="gameday">Spieltag</span>
  <button class="btn arrow-right">
    &gt;
  </button>
</div>

<% @event.gamedays.each_with_index do |gameday, index| %>
  <table class="table table-striped gameday-slider-item <%= "selected" if index == 0 %>">
    <%= render partial: "events/schedule/table_head" %>

    <% @matches.select{ |match| match.gameday == gameday }.each do |match| %>
      <%= render partial: "events/schedule/league/match_row", locals: { match: match } %>
    <% end %>
  </table>
<% end %>