<%- model_class = Event -%>
<div class="page-header">
  <h1><%= t('events.overview.title') %></h1>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:team) %></th>
    <th><%= model_class.human_attribute_name(:platzierung) %></th>
  </tr>
  </thead>
  <tbody>
  <% @event.teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, team_path(team) %></td>
        <td>Gewinner</td>
      </tr>
  <% end %>
  </tbody>
</table>