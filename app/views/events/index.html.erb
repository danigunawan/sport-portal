<p id="notice"><%= notice %></p>


<%- model_class = Event -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human(:count => :many).titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <% [:name, :game_mode, :max_teams, :deadline, :startdate, :enddate].each do |attribute| %>
        <th><%= model_class.human_attribute_name(attribute) %></th>
    <% end %>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event_path(event) %></td>
        <td><%= event.game_mode %></td>
        <td><%= event.max_teams %></td>
        <td><%= event.deadline %></td>
        <td><%= event.startdate %></td>
        <td><%= event.enddate %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      event_path(event), :class => 'btn btn-default btn-xs' %>

          <% if can? :leave, event %>
            <%= link_to t('.leave', :default => t("helpers.links.leave")),
                        leave_event_path(event),
                        :method => :put,
                          :class => 'btn btn-xs btn-default',
                        id: :leave_event_button %>
            <span class="label label-success"><%= t('events.participating') %></span>
          <% end %>

          <% if can? :join, event%>
            <% if event.single_player? %>
              <%= link_to t('.join', :default => t("helpers.links.join")),
                          join_event_path(event),
                          :method => :put,
                          :class => 'btn btn-xs btn-default',
                          id: :join_event_button %>
            <% else %>
              <%= link_to t('.join', :default => t("helpers.links.join")),
                          '#teamEventModal', 'data-toggle' => "modal", 'data-target' => "#teamEventModal", 'data-whatever' => event.id,
                          :class => 'btn btn-xs btn-default',
                          id: :join_event_button %>
            <% end %>
          <% end %>

          <% if can? :edit, event %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_event_path(event), :class => 'btn btn-default btn-xs' %>
          <% end %>
          <% if can? :destroy, event %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          event_path(event),
                          :method => :delete,
                          :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm"))},
                          :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<% if can? :create, Event %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_event_path,
                :class => 'btn btn-primary' %>
<% end %>

<br>
<form>
  <div>
    <input type="checkbox" id="shown_events" name="showAll" active="false">
    <label for="shown_events"> <%= t('events.show_events') %> </label>
  </div>
</form>

<div class="modal fade" id="teamEventModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel">Join as Team
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button></h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="form-control-label">Team</label>
            <select type="text" class="form-control" id="recipient-name">
              <option>Modal in eine Extra template</option>
              <option>dieses template dann hier aufrufen und im show.html</option>
              <option>Form schicker machen (z.B als Liste oder so, "keine Teams"-Fall abdecken)</option>
              <option>Unterscheidung von singleplayer und team schicker machen</option>
              <option>Testen bis zu abwinken</option>
              <option>eventuell noch mehr</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= link_to t('.join', :default => t("helpers.links.join")),
                    events_path,
                    :method => :put,
                    :class => 'btn btn-info',
                    id: :join_teamevent_button %>
      </div>
    </div>
  </div>
</div>