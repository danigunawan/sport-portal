<%- model_class = Event -%>
<div class="page-header">
  <h1><%= t '.title', default: model_class.model_name.human(count: :many).titleize %>
    <% if can? :create, Event %>
        <%= link_to t('helpers.links.new'),
                    new_event_path,
                    :class => 'btn btn-primary' %>
    <% end %>
  </h1>
</div>
<% if user_signed_in? and current_user.all_events.present? %>
    <h4><%= t('events.index.my_events')%></h4>
    <div class="tile-wrapper">
      <% current_user.all_events.each do |event| %>
          <%= render partial: 'application/tile_template', locals: {title: event.name, image_url: 'https://owncloud.hpi.de/index.php/s/Yq7UMRhNXlqD5o5/download', description: event.description,
          destination_path: event_path(event)} %>
      <% end %>
    </div>
<% end %>
<br>
    <h4><%= t('events.index.all_events') %></h4>
    <div class="tile-wrapper">
      <% @events.each do |event| %>
          <%= render partial: 'application/tile_template', locals: {title: event.name, image_url: 'https://owncloud.hpi.de/index.php/s/Yq7UMRhNXlqD5o5/download', description: event.description,
          destination_path: event_path(event)} %>
      <% end %>
    </div>

<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    </div>
  </div>
</div>
